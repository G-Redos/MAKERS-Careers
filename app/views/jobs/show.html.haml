%section.hero-splash(style="background-image: url(#{image_path("backgrounds/dan-and-students-overhead-70.jpg")});")
  .container
    .centered-row
      %h1= @job.company
%section.article--centered
  %article
    :markdown
      #{@job.specification}
%section.no-padding
  .button-row
    %p
      - unless @job.students.include?(current_student)
        = link_to t(:'jobs.apply_button'), job_apply_path(@job), class: 'apply-button button button--horizontal', method: :post
